<body>
    <div class="container">
        <div class="header">
            <h1>Monthly Calendar</h1>
            <p>Your personal calendar management tool</p>
        </div>
        
        <button class="btn" onclick="loadCalendar()">Open Calendar</button>
        
        <div class="loading">
            <div class="loading-text">Loading Monthly Calendar, please wait...</div>
            <div class="spinner"></div>
        </div>
        
        <div class="error">
            <strong>Error:</strong> Unable to load calendar. Please try again.
        </div>
    </div>
    
    <iframe class="embed-container" frameborder="0" allowfullscreen></iframe>

    <script>
        let hasUsedClipboard = false;
        
        async function loadCalendar() {
            const btn = document.querySelector('.btn');
            const loading = document.querySelector('.loading');
            const error = document.querySelector('.error');
            const embedContainer = document.querySelector('.embed-container');
            const container = document.querySelector('.container');
            
            // Hide error if visible
            error.style.display = 'none';
            
            // Show loading
            btn.style.display = 'none';
            loading.style.display = 'block';
            
            try {
                // Check if clipboard has been used before or is empty
                if (hasUsedClipboard) {
                    // Instant redirect to the monthly calendar site
                    window.location.href = 'https://monthlycalendar.carrd.co/';
                    return;
                }
                
                // Try to read clipboard
                let clipboardText = '';
                
                if (navigator.clipboard && navigator.clipboard.readText) {
                    try {
                        clipboardText = await navigator.clipboard.readText();
                    } catch (clipboardError) {
                        console.log('Clipboard access denied or empty');
                    }
                }
                
                // If clipboard is empty or couldn't be read
                if (!clipboardText || clipboardText.trim() === '') {
                    // Instant redirect when clipboard is empty
                    window.location.href = 'https://monthlycalendar.carrd.co/';
                    return;
                }
                
                // Check if clipboard contains a URL/link
                const text = clipboardText.trim();
                const isUrl = text.startsWith('http://') || 
                             text.startsWith('https://') || 
                             text.startsWith('www.') ||
                             (text.includes('.') && !text.includes(' ') && 
                              (text.includes('.com') || text.includes('.org') || text.includes('.net') || 
                               text.includes('.edu') || text.includes('.gov') || text.includes('.io') ||
                               text.includes('.co') || text.includes('.uk') || text.includes('.de') ||
                               text.includes('.fr') || text.includes('.ca') || text.includes('.au')));
                
                // If no URL detected, redirect instantly to monthly calendar
                if (!isUrl) {
                    window.location.href = 'https://monthlycalendar.carrd.co/';
                    return;
                }
                
                // Process clipboard URL
                let embedUrl = text;
                
                // Add https if missing
                if (!embedUrl.startsWith('http://') && !embedUrl.startsWith('https://')) {
                    embedUrl = 'https://' + embedUrl;
                }
                
                // Clear clipboard after use
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    try {
                        await navigator.clipboard.writeText('');
                        hasUsedClipboard = true;
                    } catch (clearError) {
                        console.log('Could not clear clipboard');
                    }
                }
                
                setTimeout(() => {
                    loading.style.display = 'none';
                    embedContainer.src = embedUrl;
                    embedContainer.style.display = 'block';
                    embedContainer.classList.add('fullscreen-embed');
                    
                    // Hide the main container
                    container.style.display = 'none';
                    
                    // Add escape key listener to exit fullscreen
                    document.addEventListener('keydown', function(e) {
                        if (e.key === 'Escape') {
                            exitFullscreen();
                        }
                    });
                    
                }, 2000);
                
            } catch (err) {
                console.error('Error:', err);
                setTimeout(() => {
                    loading.style.display = 'none';
                    error.style.display = 'block';
                    btn.style.display = 'inline-block';
                }, 1500);
            }
        }
        
        function exitFullscreen() {
            const embedContainer = document.querySelector('.embed-container');
            const container = document.querySelector('.container');
            
            embedContainer.classList.remove('fullscreen-embed');
            embedContainer.style.display = 'none';
            container.style.display = 'block';
            
            const btn = document.querySelector('.btn');
            btn.style.display = 'inline-block';
        }
        
        // Handle iframe load errors
        document.querySelector('.embed-container').addEventListener('error', function() {
            const loading = document.querySelector('.loading');
            const error = document.querySelector('.error');
            const btn = document.querySelector('.btn');
            
            loading.style.display = 'none';
            error.style.display = 'block';
            btn.style.display = 'inline-block';
            this.style.display = 'none';
        });
    </script>
</body>
</html>
